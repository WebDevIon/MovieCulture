<?xml version="1.0" encoding="utf-8"?>

<!-- This is a row which will contain a user review and will
    populate the recyclerView with reviews -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detail_activity_reviewer_name_tv"
        style="@style/movie_detail_reviewer_name_tv_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/detail_activity_review_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/reviewer_name_test_string" />

    <TextView
        android:id="@+id/detail_activity_review_tv"
        style="@style/movie_detail_review_tv_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_activity_reviewer_name_tv"
        tools:text="@string/review_test_string" />

</android.support.constraint.ConstraintLayout>