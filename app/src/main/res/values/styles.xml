<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


    <!-- - - - - - - - - - - - - - - - - - -
      - Used by MovieCulture About Section -
      - - - - - - - - - - - - - - - - - - -->

    <!-- About App description text style -->
    <style name="about_description_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- About App TMDb logo style -->
    <style name="about_logo_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:contentDescription">@string/tmdb_logo</item>
    </style>


    <!-- - - - - - - - - - - - - - - - -
      - Used by movie detail activity -
      - - - - - - - - - - - - - - - - -->

    <!-- Poster style -->
    <style name="movie_detail_poster_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/discovery_activity_poster_description</item>
    </style>

    <!-- Movie title style -->
    <style name="movie_detail_title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">120dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- General text style used for the content of release date and average rating -->
    <style name="movie_detail_general_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Release date string style -->
    <style name="movie_detail_release_string_tv_style" parent="movie_detail_general_text_style">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Average rating string style -->
    <style name="movie_detail_rating_string_tv_style" parent="movie_detail_general_text_style">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Plot synopsis string style -->
    <style name="movie_detail_plot_string_tv_style" parent="movie_detail_general_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Plot synopsis content style -->
    <style name="movie_detail_description_tv_style" parent="movie_detail_general_text_style">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

</resources>
