<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.movieculture">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DiscoveryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--The manifest entry for our DetailActivity -->
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".DiscoveryActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DiscoveryActivity"/>
        </activity>

        <!-- The manifest entry for Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_menu_option"
            android:parentActivityName=".DiscoveryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DiscoveryActivity"/>
        </activity>

        <!-- The manifest entry for About Activity -->
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_menu_option"
            android:parentActivityName=".DiscoveryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DiscoveryActivity"/>
        </activity>

    </application>

</manifest>